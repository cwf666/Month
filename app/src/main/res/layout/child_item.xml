<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <CheckBox
        android:id="@+id/child_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_toRightOf="@id/child_cb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/child_image"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/child_title"
            android:layout_toRightOf="@id/child_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_below="@+id/child_price"
            android:text="标题"/>

        <TextView
            android:layout_below="@id/child_price"
            android:id="@+id/child_price"

            android:layout_toRightOf="@+id/child_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="$445"/>
        <com.bawei.chewenfei.myapplication.weight.JiaJianView
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:id="@+id/jianjian_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </com.bawei.chewenfei.myapplication.weight.JiaJianView>

    </RelativeLayout>







</RelativeLayout>
